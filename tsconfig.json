{
    "compileOnSave": false,
    "compilerOptions": {
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "target": "es2020",
        "baseUrl": "./src",
        "lib": [
            "es2017",
            "dom"
        ],
        "module": "es2015",
        "importHelpers": true,
        "typeRoots": [
            "node_modules/@types"
        ]
    }
}